generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Genre {
  id     Int     @id @default(autoincrement())
  tmdbId Int     @unique
  name   String
  movies Movie[] @relation("MovieGenres")
}

model Movie {
  id               Int      @id @default(autoincrement())
  tmdbId           Int      @unique
  adult            Boolean
  backdropPath     String?
  originalLanguage String
  originalTitle    String
  overview         String
  popularity       Float
  posterPath       String?
  releaseDate      DateTime
  title            String
  video            Boolean
  voteAverage      Float
  voteCount        Int
  genres           Genre[]  @relation("MovieGenres")
}
